{
  "manifest_version": 3,
  "name": "Prestamype Analyzer",
  "version": "1.0",
  "description": "Analiza y evalúa oportunidades de inversión en Prestamype",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://prestamype.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Prestamype Analyzer"
  },
  "content_scripts": [
    {
      "matches": ["https://prestamype.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}